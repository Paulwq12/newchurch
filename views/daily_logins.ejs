<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link rel="stylesheet" href="/css/styles.css">
  <title>Daily Logins</title>
</head>
<body>
  <h1>Daily Logins</h1>

  <!-- Form to select a date -->
  <form action="/admin/daily-logins" method="GET">
    <label for="date">Select Date:</label>
    <input type="date" id="date" name="date" value="<%= new Date().toISOString().split('T')[0] %>">
    <button type="submit">View Logins</button>
  </form>

  <% if (logins && logins.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% logins.forEach(login => { %>
          <tr>
            <td><%= login.username %></td>
            <td><%= new Date(login.time).toLocaleString() %></td> <!-- Format for readability -->
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No logins found for this date.</p>
  <% } %>
</body>
</html>
